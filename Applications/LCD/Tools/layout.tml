# Layout TML v1.0
# Author: Trieu
# Description: Main layout for T-World

Root {
    id: main
    width: 320
    height: 240
    background: "black"

    Layout {
        id: welcome
        Area {
            font: 60x60
            text: "Welcome to T-World"
            align: center
        }
    }

    Layout {
        id: clock_and_date
        Area {
            x: 0
            y: 90
            width: 320
            height: 60
            text: "$hour:$min:$sec
            font: 60x60
            color: "white"
            align: center
        }
        Area {
            x: 0
            y: 50
            with: 320
            height: 40
            font: 40x40
            text: "$month $day"
            align: center
        }

    }
}